# Wildbook Infrastructure Environment Variables
# Copy this file to .env and customize for your environment

# ============================================================================
# Docker Image Tagging
# ============================================================================
TAG=latest  # Options: latest, nightly, v1.0.0, etc.

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_PASSWORD=postgres

# WBIA Database
WBIA_DB_NAME=wbia
WBIA_DB_USER=wbia
WBIA_DB_PASSWORD=wbia
WBIA_DB_URI=postgresql://wbia:wbia@db:5432/wbia

# Wildbook Database
WILDBOOK_DB_NAME=wildbook
WILDBOOK_DB_USER=wildbook
WILDBOOK_DB_PASSWORD=wildbook
WILDBOOK_DB_CONNECTION_URL=jdbc:postgresql://db:5432/wildbook

# ============================================================================
# Wildbook Configuration
# ============================================================================
SITE_NAME=Wildbook
PUBLIC_URL=/react/

# ============================================================================
# OpenSearch Configuration
# ============================================================================
ES_THRESHOLD=true
OPENSEARCH_INITIAL_ADMIN_PASSWORD=Admin123!

# ============================================================================
# Houston Integration (Optional)
# ============================================================================
# Houston is the authentication service for Wild Me
HOUSTON_CLIENT_ID=
HOUSTON_CLIENT_SECRET=

# ============================================================================
# Development Tools
# ============================================================================
# Uncomment to enable MailHog for email testing
# Run with: docker-compose --profile dev up